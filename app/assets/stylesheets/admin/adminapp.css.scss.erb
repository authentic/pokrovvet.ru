}

/* @end Blockquotes */
/* @group Forms */
/* @group Fieldsets */
fieldset {
    border: 1px solid #ccc;
    padding: 0 1.2857em 0.6428em 1.2857em; /* 0px 18px 9px 18px */
    margin: 0 auto;
    background: #f8f8f8;
    width: 80%;
}

legend {
    font-weight: bold;
}

/* @end Fieldsets */
/* @group Labels */
label {
    cursor: pointer;
}

/* @end */
/* @end Forms */
/* @group Form controls */
input,
textarea,
select,
button {
    font-family: inherit;
    font-size: 1em;
}

textarea,
input[type='text'],
input[type='password'],
select {
    border-width: 1px;
    border-style: solid;
    border-top-color: #999;
    border-left-color: #999;
    border-bottom-color: #ccc;
    border-right-color: #ccc;
    padding: 0 1px 1px 1px;
}

textarea {
    width: 99%;
    display: block;
}



/* @end */
/* @group Other elements */



form .container {
    position: relative;
    width: 100%;
    overflow: hidden;
    vertical-align: middle;
    padding-bottom: 0.5em; /* 7px */
}

form .container label {
    float: left;
    width: 23.8095%;
    text-align: right;
    padding-top: 0.5em; /* 7px */
    padding-bottom: 0.5em; /* 7px */
}

form .container input,
form .container select,
form .container textarea {
    float: left;
    width: 40.7407%;
    margin-left: 1em;
    margin-right: 1em;
    padding-top: 0.5em; /* 7px */
    padding-bottom: 0.5em; /* 7px */
}

form .container textarea:focus,
form .container input[type='text']:focus,
form .container input[type='password']:focus,
form .container select:focus {
    border-color: #234;
    background-color: #ffc;
}

form .container label em {
    font-style: normal;
    text-align: left;
    display: block;
    position: absolute;
    right: 1%;
    top: 0;
    width: 28%;
    background-color: #DEE658;
    border: 1px solid #fff;
    padding: 0.5em 1em;
    -webkit-box-shadow: 5px 5px 0 rgba(0, 0, 13, 0.2);
    -moz-box-shadow: 5px 5px 0 rgba(0, 0, 13, 0.2);
    box-shadow: 5px 5px 0 rgba(0, 0, 13, 0.2);
}

form .button-container {


}

