th, td {
    text-align: center;
}

tbody tr:nth-child(even) td, tbody tr.even td {
    background: none;
}

thead th {
    background: none;
}


.datatable {
    font: 80%/1.5em "Lucida Grande", Geneva, "DejaVu Sans", "Bitstream Vera Sans", AnjaliOldLipi, "Lucida sans", "Trebuchet MS", Arial, Verdana;
