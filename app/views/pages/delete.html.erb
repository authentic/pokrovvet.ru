<% @page_title="Удаление страницы" %>
<%= link_to("<< К списку страниц", {:action => 'list', :subject_id=>@subject.id}, :class => 'box back-link', :box=>"yes") %>
<div class="page delete">
  <h2>Удаление страницы "<%= @page.name %>"</h2>
  <%= form_for(:page, :url => {:action => 'destroy', :id => @page.id, :subject_id=>@subject.id}) do |f| %>
      <p class="large alert">Вы уверенны что хотите удалить страницу "<%= @page.name %>"?</p>

      <div class="button-container">
        <%= submit_tag("Удалить страницу") %>
      </div>
      </div>
  <% end %>