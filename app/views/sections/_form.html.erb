<%= error_messages_for(@section) %>
<div class="container"><%= f.label(:page_id, "Страница") %>
  <%= f.select(:page_id, @pages.collect { |p| [p.name, p.id] }) %></div>
<div class="container"><%= f.label("Имя секции") %>
  <%= f.text_field(:name) %></div>
<div class="container"><%= f.label("Позиция") %>
  <%= f.select(:position, 1..@section_count) %></div>
<div class="container"><%= f.label("Видимость") %>
  <%= f.check_box(:visible) %></div>
<div class="container"><%= f.label("Тип содержимого") %>
  <div><%= f.radio_button(:content_type, 'text') %> Text</div>
  <div> <%= f.radio_button(:content_type, 'HTML') %> HTML</div>
</div>
<div class=""><%= f.label("Содержимое секции") %>
  <%= f.cktext_area(:content, :toolbar=>'Full', :width=>'100%', :height=>'400px', :swf_params => {:assetable_type => 'Test', :assetable_id => 1}) %></div>
