<% @page_title="Удаление пользователя: #{@admin_user.name}" %>
<%= link_to("<< К списку пользователей", {:action => 'list'}, :class => 'box back-link', :box=>"yes") %>
<div class="user delete">
  <h2>Удаление пользователя "<%= @admin_user.name %>"</h2>
  <%= form_for(:admin_user, :url => {:action => 'destroy', :id=> @admin_user.id}) do |f| %>
      <p class="large alert">Вы уверенны что хотите удалить пользователя "<%= @admin_user.name %>"?</p>

      <div class="button-container">
        <%= submit_tag("Удалить пользователя") %>
      </div>
      </div>
  <% end %>