<% @page_title="Редактирование раздела" %>
<%= link_to("<< Главное меню", {:controller => 'access', :action=> 'menu'}, :class => 'box back-link', :box=>"yes") %>
<%= link_to("<< К списку разделов", {:action=> 'list'}, :class => 'box back-link', :box=>"yes") %>
<div class="subject edit">
  <h2>Редактирование раздела "<%= @subject.name %>"</h2>
  <%= form_for(:subject, :url=>{:action=> 'update', :id=> @subject.id
  }) do |f| %>
      <%= render(:partial => "form", :locals => {:f=> f}) %>
      <div class="button-container">
        <%= submit_tag('Сохранить изменения') %>
      </div>
  <% end %>
</div>
