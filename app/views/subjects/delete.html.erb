<% @page_title="Удаление раздела" %>
<%= link_to("<< Главное меню", {:controller => 'access', :action=> 'menu'}, :class => 'box back-link', :box=>"yes") %>
<%= link_to("<< К списку разделов", {:action => 'list'}, :class => 'box back-link', :box=>"yes") %>
<div class="subject delete">
  <h2>Удаление раздела "<%= @subject.name %>"</h2>
  <%= form_for(:subject, :url => {:action => 'destroy', :id=> @subject.id}) do |f| %>
      <p class="large alert">Вы уверенны что хотите удалить раздел "<%= @subject.name %>"?</p>

      <div class="button-container">
        <%= submit_tag("Удалить раздел") %>
      </div>
      </div>
  <% end %>