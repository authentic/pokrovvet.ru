<% @page_title=@public_user.name %>

<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @public_user, :size=>100 %>
        <%= @public_user.name %>
      </h1>

      <% if @public_user.microposts.any? %>
      <table class="microposts" summary="User microposts">
       <%= render @microposts %>

      </table>
          <%= will_paginate @microposts %>
          <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @public_user.name %><br />
      <strong>URL</strong>  <%= link_to public_users_path(@public_user), public_users_path(@public_user) %>
      <strong>Microposts</strong> <%= @public_user.microposts.count %>
    </td>
  </tr>
</table>